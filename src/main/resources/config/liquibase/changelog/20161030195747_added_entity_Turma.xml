<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Turma.
    -->
    <changeSet id="20161030195747-1" author="jhipster">
        <createTable tableName="turma">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="codigoturma" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="horario" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="disciplina_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="professor_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <createTable tableName="turma_aluno">
            <column name="alunos_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="turmas_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="turmas_id, alunos_id" tableName="turma_aluno"/>
        
        <createTable tableName="turma_sala">
            <column name="salas_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="turmas_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="turmas_id, salas_id" tableName="turma_sala"/>
        
    </changeSet>
</databaseChangeLog>
